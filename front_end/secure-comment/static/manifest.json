{
  "manifest_version": 3,
  "name": "Secure Comment",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "action": {
    "default_title": "Secure Comment",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging",
    "scripting",
    "cookies",
    "http://localhost:5173/"
  ],
  "optional_permissions": [
    "unlimitedStorage"
  ],
  "host_permissions": [
    "*://*/"
  ]
}

