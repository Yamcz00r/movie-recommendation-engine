{
  "manifest_version": 3,
  "name": "Secure Comment",
  "version": "0.1.0",
  "description": "My Chrome Extension",
  "action": {
    "default_title": "Secure Comment",
    "default_popup": "index.html"
  },
  "permissions": ["activeTab", "nativeMessaging",  "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
